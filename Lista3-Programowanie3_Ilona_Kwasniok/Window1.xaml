<Window x:Class="Lista3_Programowanie3_Ilona_Kwasniok.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista3_Programowanie3_Ilona_Kwasniok"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid >

        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions >
            <ColumnDefinition  Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>


        <Label Grid.Row="0" Grid.Column="0" Content="Name:" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightSalmon"  ></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Surname:" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightSalmon"></Label>
        <Label Grid.Row="2" Grid.Column="0" Content="Pesel:" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightSalmon"></Label>
        <Label Grid.Row="3" Grid.Column="0" Content="City:" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightSalmon"></Label>
        <Label Grid.Row="4" Grid.Column="0" Content="Adress:" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="LightSalmon"></Label>


        <TextBox Grid.Row="0" Grid.Column="1" BorderBrush="Black" Name="Name" 
         PreviewTextInput="LetterValidationTextBoxName"   VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="26" Width="220"/>


        <TextBox Grid.Row="1" Grid.Column="1" BorderBrush="Black" Name="Surname" 
         PreviewTextInput="LetterValidationTextBoxSurname"  VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="26" Width="220"/>

        <TextBox Grid.Row="2" Grid.Column="1" BorderBrush="Black" Name="Pesel" PreviewTextInput="NumberValidationTextBox"
           MaxLength="9"  VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="26" Width="220"/>


        <TextBox Grid.Row="3" Grid.Column="1" BorderBrush="Black" Name="City" 
          PreviewTextInput="LetterValidationTextBoxCity"   VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="26" Width="220"/>

        <TextBox Grid.Row="4" Grid.Column="1" BorderBrush="Black" Name="Adress" 
          PreviewTextInput="LetterValidationTextBoxAdress"   VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="26" Width="220"/>


        <Image Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Name="ImgFile"/>

        <Button Grid.Row="5" Grid.Column="2" Content="Obraz" Margin="0,10" FontSize="26" Background="Coral" Click="Img_Click"/>



        <Button Grid.Row="5" Grid.Column="0" Content="Dodaj" Margin="0,10" FontSize="26" Click="Button_Click" Background="Salmon" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   