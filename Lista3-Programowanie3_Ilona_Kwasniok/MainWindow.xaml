<Window x:Class="Lista3_Programowanie3_Ilona_Kwasniok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista3_Programowanie3_Ilona_Kwasniok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions >
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        
        
        <ListView Name="ListViewXAML" Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="Aqua" Background="LightSalmon">
            <ListView.View>
                <GridView>

                <GridViewColumn Header="Name" Width="100"  DisplayMemberBinding="{ Binding Name}"></GridViewColumn>
                <GridViewColumn Header="Surname" Width="100" DisplayMemberBinding="{Binding Surname}"></GridViewColumn>
                <GridViewColumn Header="PESEL" Width="100" DisplayMemberBinding="{Binding Pesel}"></GridViewColumn>
                
            </GridView>
           </ListView.View>
         </ListView>


        <Button Content="Load" Click="Load" Grid.Row="1" Grid.Column="0" Width="100" Height="50" VerticalAlignment="Center" Background="Salmon"></Button>
        <Button Content="Save" Click="Button_Click" Grid.Row="1" Grid.Column="1" Width="100" Height="50" VerticalAlignment="Center" Background="Salmon"></Button>
        <Button Content="Refresh" Click="Refreshwindow" Grid.Row="1" Grid.Column="3" Width="100" Height="50" VerticalAlignment="Center" Background="Salmon"></Button>
        <Button Content="Add" Click="Add" Grid.Row="1" Grid.Column="4" Width="100" Height="50" VerticalAlignment="Center" Background="Salmon"></Button>
       


    </Grid>
</Window>
